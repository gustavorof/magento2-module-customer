<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="checkout" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Danke_Slider::css/flexslider.css" />
    </head>
    <body>
        <referenceBlock name="page.main.title" display="false" />
        <referenceContainer name="main.content">
            <container name="flexslider_container" htmlTag="div" htmlClass="banner-slider" before="-" >
                <block class="Danke\Slider\Block\Slider" name="banner.slider"  template="Danke_Slider::banner-slider.phtml" />
            </container>
        </referenceContainer>
    </body>
</page>